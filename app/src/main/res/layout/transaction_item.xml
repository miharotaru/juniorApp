<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/card_round"
    android:elevation="@dimen/margin"
    android:layout_marginTop="@dimen/margin"
    android:layout_marginBottom="@dimen/margin"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:id="@+id/card_transaction"
    >

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="@dimen/image"
        android:layout_height="@dimen/image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_name_logo"
        android:layout_marginStart="@dimen/margin"
        android:src="@drawable/dedeman"
        android:background="@drawable/card_round"
        />

    <TextView
        android:id="@+id/tv_name_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/image_logo"
        android:layout_marginTop="15dp"
        android:layout_marginStart="@dimen/margin"
        tools:text="Demean"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tv_iban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_name_logo"
        app:layout_constraintLeft_toRightOf="@id/image_logo"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        tools:text="@string/IBAN"
        android:textSize="12sp"
        android:textColor="@color/lightGray"
        />

    <ImageView
        android:id="@+id/image_status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:src="@drawable/approved"
        android:background="@drawable/card_round"
        />

</androidx.constraintlayout.widget.ConstraintLayout>